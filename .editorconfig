# Root indicator (important)
root = true

# Global settings (applies to all files unless overridden)
[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

# Lua-specific settings
[*.lua]
indent_style = space
indent_size = 2

# C-specific settings
[*.c]
indent_style = space
indent_size = 4

# C header files
[*.h]
indent_style = space
indent_size = 4

# Markdown settings
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# JSON settings
[*.json]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# Shell script settings
[*.sh]
indent_style = space
indent_size = 2

# Plain text settings
[*.txt]
trim_trailing_whitespace = false
insert_final_newline = true
